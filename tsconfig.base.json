{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "noLib": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {},
    "plugins": [
      {
        "transform": "tst-reflect-transformer"
      }
    ]
  },
  "reflection": {
    "debugMode": false,
    "metadata": {
      "type": "typelib"
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
